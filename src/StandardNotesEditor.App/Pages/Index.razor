@page "/"

@inherits CancellableComponent;
@inject INoteService _noteService;

<h1>Hello, world!</h1>

<textarea
    id="textarea"
    class="sk-input contrast textarea"
    spellCheck="true"
    rows="15"
    @bind="_content"
></textarea>

<button @onclick="SaveNoteContent">save</button>

@code
{
    private string _content = string.Empty;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _content = await _noteService.LoadAsync(CancellationToken);
            StateHasChanged();
        }
    }

    private async Task SaveNoteContent() => await _noteService.SaveAsync(_content, CancellationToken);
}